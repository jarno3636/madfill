export default function handler(req, res) {
  // Minimal example – fill in your details
  const manifest = {
    name: "MadFill",
    icon: "https://madfill.vercel.app/icon.png", // 512x512 PNG is ideal
    description: "Fill the blank. Make it funny. Win the pot.",
    // Where the app should open when users tap “Open” from your app listing
    homeUrl: "https://madfill.vercel.app/free",
    // (Optional) webhook for notifications; leave out if not using yet
    // webhookUrl: "https://madfill.vercel.app/api/farcaster-webhook",

    // REQUIRED: domain verification — do this last (see note below)
    // Replace these placeholders after you sign the message from your custody wallet.
    accountAssociation: {
      header: "eip191",
      payload: "<your-signed-payload>",
      signature: "<0x_signature>",
    },
  }

  res.setHeader('Content-Type', 'application/json')
  // cache a bit so Warpcast/CDNs can fetch it easily
  res.setHeader('Cache-Control', 'public, max-age=300, s-maxage=3600')
  res.status(200).json(manifest)
}
